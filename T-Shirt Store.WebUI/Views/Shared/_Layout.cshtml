    <script src="~/admin/assets/libs/toastr.js/toastr.min.js"></script>
    <script type="text/javascript" src="~/admin/assets/js/customize.js"></script>


    <script>

        $(document).ready(function(){

            $('#subscribe').submit(function(e){
                e.preventDefault();


                    const formData = new FormData(e.currentTarget);

                    $.ajax({
                        url:'@Url.Action("Subscribe" , "Home")',
                        type: 'Post',
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function(response){


                            if(response.error==true){
                                e.currentTarget.reset();
                                toastr.error(response.message, `Xeta`);
                            }
                            else{
                                toastr.success(response.message, `Ugurlu`);
                            }
                        },
                        error: function (response) {
                            toastr.error("Teyin edilmeyen xeta");
                        }



                    });
              });


        });

    </script>

    @RenderSection("js", required: false)
