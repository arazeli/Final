@model ContactPost 
@{
    ViewData["Title"] = "Answer";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Brands</h4>
                    <span>
                        Sorgular
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                    </li>

                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Sorgular</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="card p-3">
        <div class="card-block">
            <form method="post">
                <div class="form-group row">
                    <label asp-for="Message" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.Message</p>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.Email</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="AnswerMessage" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Id" />
                        <textarea class="form-control" asp-for="AnswerMessage"></textarea>
                        <span asp-validation-for="AnswerMessage"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2"></label>
                    <div class="col-sm-10">

                        <button type="submit" class="btn btn-success m-b-0">Gonder</button>
                        <a asp-action="index" type="submit" class="btn btn-primary m-b-0">Go to list</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

